[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[alias]
	conflicts = diff --name-only --diff-filter=U

[merge]
    tool = vimdiff

[alias]
	conflicts = diff --name-only --diff-filter=U


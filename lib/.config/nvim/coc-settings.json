{
    "suggest.noselect": false,
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "typescript",
        "typescriptreact",
        "json",
        "python",
        "ruby",
        "javascriptreact",
        "typescript.tsx",
        "graphql",
        "dart"
    ],
    "clangd.enabled": true,
    "clangd.arguments": [],
    "clangd.path": "clangd",
    "clangd.checkUpdates": true,
    "clangd.semanticHighlighting": true,
    "snippets.ultisnips.enable": true,
    "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/snippets"],
    "prettier.printWidth": 80,
    "prettier.tabWidth": 4,
    "prettier.singleQuote": false,
    "prettier.trailingComma": "es5",
    "eslint.autoFix": true,
    "solargraph.diagnostics": true,
    "solargraph.autoformat": true,
    "solargraph.completion": true,
    "solargraph.rename": true,
    "solargraph.formatting": true,
    "solargraph.hover": true,
    "python.linting.enabled": true,
    "python.sortImports.path": "/home/ges/.local/bin/isort",
    "python.formatting.provider": "yapf",
    "python.linting.pylintEnabled": true,
    "prettier.bracketSpacing": true,
    "python.linting.pylintPath": "/home/ges/.local/bin/pylint",
    "python.pythonPath": "/usr/bin/python",
    "python.jediPath": "/home/ges/.local/lib/python3.8/site-packages",
    "python.autoUpdateLanguageServer": true,
    "python.autoComplete.showAdvancedMembers": true,
    "python.jediEnabled": true,
    "prettier.semi": true,
    "prettier.useTabs": false,
    "prettier.arrowParens": "always",
    "flutter.lsp.initialization.closingLabels": true,
    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.focus": true,
    "explorer.toggle": true,
    "explorer.file.hiddenRules": {
        "extensions": ["o", "a", "obj", "pyc"],
        "filenames": [],
        "patternMatches": ["^\\.", "node_modules"]
    },
    "diagnostic.errorSign": "✘",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck"
    },
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "digestif": {
            "command": "digestif",
            "filetypes": ["tex", "plaintex", "context"]
        },
        "golang": {
            "command": "go-langserver",
            "filetypes": ["go"],
            "initializationOptions": {
                "gocodeCompletionEnabled": true,
                "diagnosticsEnabled": true,
                "lintTool": "golint"
            }
        },
        "lua": {
            "command": "lua-lsp",
            "filetypes": ["lua"]
        }
    }
}
